{% extends 'page.html.twig' %} {% block content %} {% if success %}
<div class="alert alert-success" role="alert">
  {{ success }}
</div>
{% endif %} {% if error %}
<div class="alert alert-danger" role="alert">
  {{ error }}
</div>
{% endif %} {% if header %}
<h2>{{ header }}</h2>
{% endif %}
<script src="/js/tinymce/js/tinymce/tinymce.min.js"></script>
<form action="./admin_originals.php?action=insert" method="POST">
  <div class="form-group" width="20">
    <label for="author_id">Введите id автора из таблицы "Все авторы"</label>
    <input
      type="text"
      class="form-control"
      name="author_id"
      id="author_id"
      placeholder="111"
      required
    />
  </div>
  <div class="form-group" width="20">
    <label for="cycle_zh">Цикл кит.</label>
    <input
      type="text"
      class="form-control"
      name="cycle_zh"
      id="cycle_zh"
      placeholder="芣苡 "
    />
  </div>
  <div class="form-row text-center justify-content-center">
    <div class="col-10">
      <label for="cycle_ru">Название цикла рус.</label>
      <input
        type="text"
        class="form-control"
        name="cycle_ru"
        placeholder="100 Ancient Chineese poems"
      />
    </div>
    <div class="col-2">
      <label for="corder">Порядковый номер</label>
      <input type="text" class="form-control" name="corder" />
    </div>
  </div>
  <div class="form-group" width="20">
    <label for="subcycle_zh">Подцикл кит.</label>
    <input
      type="text"
      class="form-control"
      name="subcycle_zh"
      id="subcycle_zh"
      placeholder="芣苡 芣苡 "
    />
  </div>
  <div class="form-row text-center justify-content-center">
    <div class="col-10">
      <label for="subcycle_ru">Название подцикла рус.</label>
      <input
        type="text"
        class="form-control"
        name="subcycle_ru"
        placeholder="Ушедший в бессмертие (поэма)"
      />
    </div>
    <div class="col-2">
      <label for="scorder">Порядковый номер</label>
      <input type="text" class="form-control" name="scorder" />
    </div>
  </div>
  <div class="form-group" width="20">
    <label for="biblio_id"
      >Введите id источника из таблицы "Все источники</label
    >
    <input
      type="text"
      class="form-control"
      name="biblio_id"
      id="biblio_id"
      placeholder="12"
    />
  </div>
  <div class="form-group" width="20">
    <label for="poem_code">Код стиха</label>
    <input
      type="text"
      class="form-control"
      name="poem_code"
      id="poem_code"
      placeholder="ШЦ-5"
    />
  </div>
  <div class="form-group" width="20">
    <label for="poem_name_zh">Название стиха кит.</label>
    <input
      type="text"
      class="form-control"
      name="poem_name_zh"
      id="poem_name_zh"
      placeholder="芣苡"
      required
    />
  </div>
  <div class="form-group" width="20">
    <label for="poem_name_ru">Название стиха рус.</label>
    <input
      type="text"
      class="form-control"
      name="poem_name_ru"
      id="poem_name_ru"
      placeholder="Подорожник"
      required
    />
  </div>
  <div class="form-group">
    <label for="genres">Жанр</label>
    <input type="text" class="form-control" name="genres" />
  </div>
  <div class="form-group">
    <label for="size">Размер</label>
    <input type="text" class="form-control" name="size" />
  </div>
  <div class="form-group" width="50">
    <label for="site">Сайт (только если нет ID источника)</label>
    <input
      type="text"
      class="form-control"
      name="site"
      placeholder="wikisource.org"
    />
  </div>
  <div class="form-group">
    <label for="siteURL">Сайт URL (только если нет ID источника)</label>
    <input
      type="text"
      class="form-control"
      name="siteURL"
      placeholder="https://zh.m.wikisource.org/zh-hans/村雪夜坐"
    />
  </div>
  <div class="form-group">
    <label for="poem_text">Введите и отредактируйте HTML текста стиха</label>
    <textarea
      class="form-control"
      name="poem_text"
      id="poem_text"
      rows="30"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<script>
  tinymce.init({
    content_css:
      "/css/bootstrap.min.css,/css/chinesepoetry2.css,/css/chinesepoetry.css",
    selector: "textarea#poem_text",
    height: 500,

    plugins: [
      "advlist autolink lists link image charmap print preview anchor",
      "searchreplace visualblocks code fullscreen",
      "insertdatetime media table code help template",
    ],
    toolbar:
      "undo redo | formatselect | " +
      "bold italic backcolor | alignleft aligncenter " +
      "alignright alignjustify | bullist numlist outdent indent | " +
      "removeformat | template | help",
  });
</script>
{% endblock %}
