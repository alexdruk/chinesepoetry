{% extends 'page.html.twig' %} {% block content %} {% if showDataTable %}
<link rel="stylesheet" type="text/css" href="/js/DataTables/datatables.min.css"/>
<script type="text/javascript" src="/js/DataTables/datatables.min.js"></script>
<script type="text/javascript" class="init">
    $(document).ready(function() {
        $('#showAllOriginals').DataTable();
    });
</script>
{% endif %} {% if header %}
<h2>{{ header }}</h2> {% endif %}
<table class="table table-sm table-bordered table-hover table-responsive" id="showAllOriginals">
    <thead thead-light>
        <tr>
            <th scope="col">id</th>
            <th scope="col">id автора</th>
            <th scope="col">Имя</th>
            <th scope="col">Годы жизни</th>
            <th scope="col">Цикл кит.</th>
            <th scope="col">Цикл рус.</th>
            <th scope="col">Подцикл кит.</th>
            <th scope="col">Подцикл рус.</th>
            <th scope="col">Код стиха</th>
            <th scope="col">biblio id</th>
            <th scope="col">Название кит.</th>
            <th scope="col">Название рус.</th>
            <th scope="col">Эпоха</th>
            </tr>
    </thead>
    <tbody>
        {% for record in records %}
        <tr>
            {% for key, val in record %}
            <td>{{ val }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}