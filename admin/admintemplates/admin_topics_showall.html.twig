{% extends 'page.html.twig' %} {% block content %}
<div class="row justify-content-center">
    <div class="col-auto">
        <table class="table table-sm table-bordered table-hover table-responsive" id="showAllTopics">
            <thead thead-light>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Название темы</th>
                    <th scope="col">Синоним названия</th>
                    <th scope="col">Есть ли в антологии</th>
                </tr>
            </thead>
            <tbody>
                {% for record in records %}
                <tr>
                    {% for key, val in record %}
                    <td>{{ val }}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}