{% extends 'page.html.twig' %} {% block content %} {% if showDataTable %}
<link rel="stylesheet" type="text/css" href="/js/DataTables/datatables.min.css"/>
<script type="text/javascript" src="/js/DataTables/datatables.min.js"></script>
<script type="text/javascript" class="init">
    $(document).ready(function() {
        $('#showAllSources').DataTable();
    });
</script>
{% endif %}
<table class="table table-sm table-bordered table-hover table-responsive" id="showAllSources">
    <thead thead-light>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Имя автора</th>
            <th scope="col">Название книги</th>
            <th scope="col">Составитель / переводчик</th>
            <th scope="col">Название ссылки в антологии</th>
            <th scope="col">Серия</th>
            <th scope="col">Издательство</th>
            <th scope="col">Год</th>
            <th scope="col">код книги</th>
            <th scope="col">Полные выходные данные</th>
            <th scope="col">ISBN</th>
            <th scope="col">Есть антологии</th>
        </tr>
    </thead>
    <tbody>
        {% for record in records %}
        <tr>
            {% for key, val in record %}
            <td>{{ val }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}