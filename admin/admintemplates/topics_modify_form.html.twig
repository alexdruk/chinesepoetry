{% extends 'page.html.twig' %} {% block content %} {% if success %}
<div class="alert alert-success" role="alert">
    {{ success }}
</div>
{% endif %} {% if error %}
<div class="alert alert-danger" role="alert">
    {{ error }}
</div>
{% endif %}
<script src="/js/tinymce/js/tinymce/tinymce.min.js"></script>
{% if header %}
<h2>{{ header }}</h2> 
{% endif %}
    <div class="col-auto">
        {% if modify %}
        <form action="./admin_topics.php?action=modifyDesc&record_id={{ topic_id }}" method="POST">
            <div class="form-group">
                <label for="inputTopicName">ID темы</label>
                <input type="text" class="form-control" name="topic_id" id="topic_id" placeholder="ID темы" value="{{ topic_id }}">
            </div>
            <div class="form-group">
                <label for="topic_text">отредактируйте HTML текста</label>
                <textarea class="form-control" name="topic_text" id="topic_text" rows="30">{{ topic_text }}</textarea>
            </div>
            <button type="submit " class="btn btn-primary ">Submit</button>
        </form>
        {% else %}
        <form action="./admin_topics.php?action=insertDesc" method="POST">
            <div class="form-group">
                <label for="inputTopicName">Вставте ID темы из талицы "Все темы"</label>
                <input type="text" class="form-control" name="topic_id" id="topic_id" placeholder="ID темы" required>
            </div>
            <div class="form-group">
                <label for="topic_text">отредактируйте HTML текста</label>
                <textarea class="form-control" name="topic_text" id="topic_text" rows="30"></textarea>
            </div>
            <button type="submit " class="btn btn-primary ">Submit</button>
        </form>
        {% endif %}
    </div>
    <script>
        tinymce.init({
        content_css : "/css/bootstrap.css,/css/chinesepoetry2.css,/css/chinesepoetry.css",
        selector: 'textarea#topic_text',
        height: 500,
    
        plugins: [
          'advlist autolink lists link image charmap print preview anchor',
          'searchreplace visualblocks code fullscreen',
          'insertdatetime media table code help template'
        ],
        toolbar: 'undo redo | formatselect | ' +
        'bold italic backcolor | alignleft aligncenter ' +
        'alignright alignjustify | bullist numlist outdent indent | ' +
        'removeformat | template | help'});
    </script> 
    
    
{% endblock %}