{% extends 'page_root.html.twig' %} {% block content %}
<!-- poems_showall.html.twig-->
<div class="jumbotron" id="authors_jumbotron">
    <div class="row">
        <div class="col-10 mx-auto">
            <h4 class="authors header" id="authors_header">{{ header }}</h4>
           {% if byAuthor %}
           <ol>
                {% for record in records %}
                    {% if record[6] %}
                        <li class="authors list"><a href="./poems.php?action=show&author_id={{ record[0] }}">{{ record[2] }} {{ record[3] }}</a>&nbsp;<span class="name zh">{{ record[6] }}</span> - {{ record[4] }}</li>
                    {% else %}                    
                        <li class="authors list"><a href="./poems.php?action=show&author_id={{ record[0] }}">{{ record[2] }} {{ record[3] }}</a>&nbsp;<span class="name zh">{{ record[7] }}</span> - {{ record[4] }}</li>
                    {% endif %}
                {% endfor %}
            </ol>
{# 
            {% elseif byTranslator %}
            <!--h4 class="translators header" id="translators_header">{{ header }}</h4-->
            <ol>
                {% for record in records %}
                <li class="translators list"><a href="./poems.php?action=show&translator_id={{ record[0] }}">{{ record[1] }}</a></li>
                {% endfor %}
            </ol>
#}
            {% elseif byTopic %}
            <ol>
                {% for record in records %}
                    {% if record[5] %}
                        <li class="authors list"><a href="./poems.php?action=show&topic_id={{ record[7] }}&author_id={{ record[0] }}">{{ record[2] }} {{ record[3] }}</a>&nbsp;<span class="name zh">{{ record[5] }}</span> - {{ record[4] }}</li>
                    {% else %}                    
                        <li class="authors list"><a href="./poems.php?action=show&topic_id={{ record[7] }}&author_id={{ record[0] }}">{{ record[2] }} {{ record[3] }}</a>&nbsp;<span class="name zh">{{ record[6] }}</span> - {{ record[4] }}</li>
                    {% endif %}
                {% endfor %}
            </ol>
            {% elseif search %}
            <form action="./poems.php?action=search&posted=1" method="POST">
                <div class="form-group">
                    <label for="inputPattern">Введите слово или словосочитание для поиска (не менее 5 знаков)</label>
                    <input type="text" class="form-control" name="pattern" id="inputPoemSearch" placeholder="Не толкай ты большую телегу" required minlength="5">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            {% endif %}
</div>
</div>
</div>
{% endblock %}